{
    "heading": {
        "backgroundImage": "linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)), url('/img/spur.jpg')",
        "width": "100vw",
        "minHeight": "400px",
        "height": "490px",
        "backgroundRepeat": "no-repeat",
        "backgroundPosition": "center",
        "position": "relative",
        "backgroundSize": "cover",
        "borderBottom": "1px solid rgba(255, 255, 255, 1)",
        "borderTop": "0.5px solid white",
        "marginTop": "-0.1cm"
    },

    "typewriter": {
        "position": "absolute",
        "left": "50%",
        "top": "50%",
        "margin": "0",
        "color": "rgb(26, 134, 58)",
        "fontSize": "4vw",
        "fontFamily": "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif",
        "overflow": "hidden", 
        "border-right": "0.11em solid black", 
        "whiteSpace": "nowrap",  
        "letterSpacing": "0.04em", 
        "fontWeight" : "100",
        "transform": "translate(-50%,-50%)",
        "width": "0",
        "animation": "typing 3s steps(var(--steps), end) 0.5s forwards, blink-caret .5s step-end 3s forwards"
    }

}